
@{
    ViewData["Title"] = "Delete";
    Advertisement advertisement = Model;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Advertisement</h4>
            <div class="row">
                <div class="col-md-12">
                    <img src="~/img/@advertisement.Image" class="img-fluid" />
                </div>
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h4>Title:</h4>
                        <span class="ml-2">@advertisement.Title</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Description:</h4>
                        <span class="ml-2">@advertisement.AdvertisementDetail.Description</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Language:</h4>
                        @{
                            @if (advertisement.Language.IsDeleted == true)
                            {
                                <span class="ml-2">This section has no language</span>
                            }
                            else
                            {
                                <span class="ml-2">@advertisement.Language.Name (@advertisement.Language.Code)</span>
                            }
                        }
                    </div>
                </div>
            </div>
            <p class="text-danger mt-3">Do you want to delete?</p>
            <hr />
            <form method="post">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
                <button type="submit" class="btn btn-danger ml-2">Delete</button>
            </form>
        </div>
    </div>
</div>

