@model HowItWorkCard
@{
    ViewData["Title"] = "Detail";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">How It Work Detail</h4>
            <div class="row">
                <div class="col-md-12">
                    <img src="~/img/@Model.Image" class="img-fluid" />
                </div>
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h4>Title:</h4>
                        <span class="ml-2">@Model.Title</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Description:</h4>
                        <span class="ml-2">@Model.Description</span>
                    </div>
                    <div class="item d-flex mt-2">
                        <h4>Language:</h4>
                        @{
                            @if (Model.Language.IsDeleted == true)
                            {
                                <span class="ml-2">This section has no language</span>
                            }
                            else
                            {
                                <span class="ml-2">@Model.Language.Name (@Model.Language.Code)</span>
                            }
                        }
                    </div>
                </div>
            </div>
            <hr />
            <a asp-action="Index" class="btn btn-info text-light my-button">
                <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
            </a>
        </div>
    </div>
</div>



