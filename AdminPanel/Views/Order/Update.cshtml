@model Order
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Order's status</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Code: @Model.Code</label>
                </div>
                <div class="form-group" id="statusInput">
                    <label>Statuses</label>
                    <select class="form-control" name="StatusId" id="status">
                        @foreach (Status item in ViewBag.Statuses)
                        {
                            if (Model.StatusId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.Title</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-warning mr-2">Update</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
