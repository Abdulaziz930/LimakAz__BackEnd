@model Order
@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Order</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ButtonName">Button Name</label>
                    <input asp-for="ButtonName" class="form-control" placeholder="Button Name">
                    <span asp-validation-for="ButtonName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ButtonUrl">Button Url</label>
                    <input asp-for="ButtonUrl" class="form-control" rows="4" placeholder="Button Url">
                    <span asp-validation-for="ButtonUrl" class="text-danger"></span>
                </div>
                <div class="form-group" id="languageInput">
                    <label>Languages</label>
                    <select class="form-control" name="LanguageId" id="language">
                        @foreach (Language item in ViewBag.Languages)
                        {
                            if (Model.LanguageId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.Code (@item.Name)</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Code (@item.Name)</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-warning mr-2">Update</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}