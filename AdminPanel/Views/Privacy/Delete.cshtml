
@{
    ViewData["Title"] = "Delete";
    Privacy privacy = Model;
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Delete Privacy</h4>
            <div class="row">
                <div class="col-md-12">
                    <img src="~/img/@privacy.Image" class="img-fluid" />
                </div>
                <div class="item d-flex mt-2">
                    <h4>Privacy page title:</h4>
                    <span class="ml-2">@privacy.PrivacyTitle</span>
                </div>
                <div class="item d-flex mt-2">
                    <h4>Description:</h4>
                    <span class="ml-2">@Html.Raw(privacy.Description)</span>
                </div>
                <div class="item d-flex mt-2">
                    <h4>Language:</h4>
                    @{
                        @if (privacy.Language.IsDeleted == true)
                        {
                            <span class="ml-2">This section has no language</span>
                        }
                        else
                        {
                            <span class="ml-2">@privacy.Language.Name (@privacy.Language.Code)</span>
                        }
                    }
                </div>
            </div>
        </div>
        <p class="text-danger mt-3">Do you want to delete?</p>
        <hr />
        <form method="post">
            <a asp-action="Index" class="btn btn-primary">Go Back</a>
            <button type="submit" class="btn btn-danger ml-2">Delete</button>
        </form>
    </div>
</div>

