<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin - @ViewBag.Title</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/adminpanel/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/adminpanel/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/adminpanel/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/adminpanel/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/adminpanel/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="navbar-brand-wrapper d-flex justify-content-center">
                <div class="navbar-brand-inner-wrapper d-flex justify-content-between align-items-center w-100">
                    <a class="navbar-brand brand-logo" asp-controller="Dashboard" asp-action="Index"><img src="~/adminpanel/images/logo.svg" alt="logo" /></a>
                    <a class="navbar-brand brand-logo-mini" asp-controller="Dashboard" asp-action="Index"><img src="~/adminpanel/images/logo-mini.svg" alt="logo" /></a>
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-sort-variant"></span>
                    </button>
                </div>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            <span class="nav-profile-name">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" asp-controller="User" asp-action="Logout">
                                <i class="mdi mdi-logout text-primary"></i>
                                Logout
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    @if (User.IsInRole(RoleConstants.ModeratorRole))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="mdi mdi-home menu-icon"></i>
                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#advertisements" aria-expanded="false" aria-controls="advertisements">
                                <i class="mdi mdi-circle-outline menu-icon"></i>
                                <span class="menu-title">Advertisements</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="advertisements">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Advertisements" asp-action="Index">Advertisements Content</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="AdvertisementTitle" asp-action="Index">Advertisement Titles</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="mdi mdi-account menu-icon"></i>
                                <span class="menu-title">Users</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="mdi mdi-home menu-icon"></i>
                                <span class="menu-title">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#advertisements" aria-expanded="false" aria-controls="advertisements">
                                <i class="mdi mdi-circle-outline menu-icon"></i>
                                <span class="menu-title">Advertisements</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="advertisements">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Advertisements" asp-action="Index">Advertisements Content</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="AdvertisementTitle" asp-action="Index">Advertisement Titles</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Languages" asp-action="Index">
                                <i class="mdi mdi-chart-pie menu-icon"></i>
                                <span class="menu-title">Languages</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Calculator" asp-action="Index">
                                <i class="mdi mdi-calculator menu-icon"></i>
                                <span class="menu-title">Calculator</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Country" asp-action="Index">
                                <i class="mdi mdi-earth menu-icon"></i>
                                <span class="menu-title">Countries</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="City" asp-action="Index">
                                <i class="mdi mdi-city menu-icon"></i>
                                <span class="menu-title">Cities</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UnitsOfLength" asp-action="Index">
                                <i class="mdi mdi-math-compass menu-icon"></i>
                                <span class="menu-title">Units Of Length</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Weight" asp-action="Index">
                                <i class="mdi mdi-weight menu-icon"></i>
                                <span class="menu-title">Weight</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProductType" asp-action="Index">
                                <i class="mdi mdi-dropbox menu-icon"></i>
                                <span class="menu-title">Product Types</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#howItWork" aria-expanded="false" aria-controls="howItWork">
                                <i class="mdi mdi-circle-outline menu-icon"></i>
                                <span class="menu-title">How It Works</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="howItWork">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" asp-controller="HowItWork" asp-action="Index">How It Work</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="HowItWorkCard" asp-action="Index">How It Work Cards</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="collapse" href="#certifcate" aria-expanded="false" aria-controls="certifcate">
                                <i class="mdi mdi-circle-outline menu-icon"></i>
                                <span class="menu-title">Certifcates</span>
                                <i class="menu-arrow"></i>
                            </a>
                            <div class="collapse" id="certifcate">
                                <ul class="nav flex-column sub-menu">
                                    <li class="nav-item"> <a class="nav-link" asp-controller="Certifcate" asp-action="Index">Certifcate Title</a></li>
                                    <li class="nav-item"> <a class="nav-link" asp-controller="CertifcateContent" asp-action="Index">Certifcate Content</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Index">
                                <i class="mdi mdi-shopping menu-icon"></i>
                                <span class="menu-title">Shops</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rule" asp-action="Index">
                                <i class="mdi mdi-flash menu-icon"></i>
                                <span class="menu-title">Rules</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Question" asp-action="Index">
                                <i class="mdi mdi-comment-question-outline menu-icon"></i>
                                <span class="menu-title">Questions</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Index">
                                <i class="mdi mdi-file-document-box menu-icon"></i>
                                <span class="menu-title">About</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Privacy" asp-action="Index">
                                <i class="mdi mdi-security menu-icon"></i>
                                <span class="menu-title">Privacy</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="mdi mdi-account menu-icon"></i>
                                <span class="menu-title">Users</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a> from Bootstrapdash.com</span>
                    </div>
                </footer>
            </div>
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <script src="~/adminpanel/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/adminpanel/vendors/chart.js/Chart.min.js"></script>
    <script src="~/adminpanel/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/adminpanel/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/adminpanel/js/off-canvas.js"></script>
    <script src="~/adminpanel/js/hoverable-collapse.js"></script>
    <script src="~/adminpanel/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/adminpanel/js/dashboard.js"></script>
    <script src="~/adminpanel/js/data-table.js"></script>
    <script src="~/adminpanel/js/jquery.dataTables.js"></script>
    <script src="~/adminpanel/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->
    <script src="~/adminpanel/js/jquery.cookie.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
